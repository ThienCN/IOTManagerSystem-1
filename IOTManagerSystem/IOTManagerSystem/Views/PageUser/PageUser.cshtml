<script type="text/javascript">
    $(document).ready(function () {
        $("#trang-cua-ban").addClass("active");
    });

    function saveProfileNew() {
        $("#updateProfileForm").submit();
    }

    $("#btnEditThongTinCaNhanUser").click(function () {
        $("#editThongTinCaNhanUserModal").modal('show');
        var UpdateProfileTemplate = kendo.template($("#UpdateProfileTemplate").html());
        $(".UpdateProfileTemplate").html(UpdateProfileTemplate(JSON.parse('@Html.Raw(Json.Encode(infoUser))')));
        ValidateUpdateProfile();
    });

    function ValidateUpdateProfile() {
        $("#updateProfileForm").validate({
            rules: {
                'ho_ten_nguoi_dung': { required: true },
                'gioi_tinh': { required: true },
                'ngay_sinh': { required: true },
                'noi_sinh': { required: true },
                'sdt': { required: true },
                'cmnd': { required: true },
                'email': { required: true },
                'dia_chi': { required: true },
            },
            messages: {
                'ho_ten_nguoi_dung': { required: "Thông tin bắt buộc" },
                'gioi_tinh': { required: "Thông tin bắt buộc" },
                'ngay_sinh': { required: "Thông tin bắt buộc" },
                'noi_sinh': { required: "Thông tin bắt buộc" },
                'sdt': { required: "Thông tin bắt buộc" },
                'cmnd': { required: "Thông tin bắt buộc" },
                'email': { required: "Thông tin bắt buộc" },
                'dia_chi': { required: "Thông tin bắt buộc" },
            },
            errorPlacement: function (error, element) {
            },
            submitHandler: function (form) {
                $(form).ajaxSubmit({
                    clearForm: false,
                    beforeSend: function () {
                        blockUI(true);
                    },
                    success: function (data) {

                    }
                });
                return false;
            }
        });
    }
